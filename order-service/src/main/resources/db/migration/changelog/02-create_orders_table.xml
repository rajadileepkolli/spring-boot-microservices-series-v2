<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="rajakolli" id="createTable-orders">
        <createSequence
                        sequenceName="order_id_seq"
                        incrementBy="100"
                        startValue="1"
                        />
        <createSequence sequenceName="order_item_id_seq" startValue="1" incrementBy="100"/>

        <createTable tableName="orders">
            <column name="id" type="BIGINT" defaultValueSequenceNext="order_id_seq">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_orders"/>
            </column>
            <column name="customer_email" type="VARCHAR(255)"/>
            <column name="customer_address" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="order_items">
            <column name="id" type="BIGINT" defaultValueSequenceNext="order_item_id_seq">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_order_items"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="product_price" type="NUMERIC(19,2)"/>
            <column name="order_id" type="BIGINT"/>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="order_id" baseTableName="order_items" constraintName="FK_ORDER_ITEMS_ON_ORDER" referencedColumnNames="id" referencedTableName="orders"/>
    </changeSet>
</databaseChangeLog>
