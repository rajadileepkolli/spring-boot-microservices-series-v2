<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="rajakolli" id="createTable-inventorys">
        <createSequence
                        sequenceName="inventory_id_seq"
                        incrementBy="100"
                        startValue="1"
                        />
        <createTable tableName="inventorys">
            <column name="id" type="bigint" defaultValueSequenceNext="inventory_id_seq">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_code" type="varchar(1024)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="quantity" type="int" />
            <column name="reserved_items" type="int" />
        </createTable>
    </changeSet>
</databaseChangeLog>
